<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sandwich" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#087f23</item>
        <item name="colorPrimaryVariant">#519657</item>
        <item name="colorOnPrimary">#1b0000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#b61827</item>
        <item name="colorSecondaryVariant">#7f0000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Radio buttons. -->
        <item name="radioButtonStyle">@style/Widget.Sandwich.CompoundButton.RadioButton</item>
        <!-- Text appearance style. -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Sandwich.Subtitle1</item>
    </style>
</resources>